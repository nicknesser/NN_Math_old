package logtobase;
import java.lang.Math;
import java.util.Scanner;

/*This is a simple program intended to take an input of the expression
 * log ((subscript) x) (y) = z and output it as the exponential expression
 * x^ z = y. 
 */

// import declarations and packages
class logtobase {
       
	public static void main(String[] arguments) {	
		// create Scanner to take user input
		Scanner ltb = new Scanner(System.in);
		
		// Variables are named after position in output
		System.out.println("What is the base of your log? "
				+ "(If no base is shown, use 10): ");
		int base = ltb.nextInt();
		
		System.out.println("What are you taking the log of?: ");
		int answer = ltb.nextInt();
		
		System.out.println("What is the answer to the log?: ");
		int power = ltb.nextInt();
		
		System.out.println("Your expression will be: " + base 
				+ " raised to the " + power + "th power equals " + answer);
        
		ltb.close();
	}
}
